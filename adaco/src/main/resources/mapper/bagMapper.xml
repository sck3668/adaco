	<insert id = "insert">
		insert into bag(username,artno,total_price,amount)
		values(#{username},#{artno},#{totalPrice},0)
	</insert>
	
	<update id="update">
		update bag
		<trim suffixOverrides="," prefix="set">
			<if test="totalPrice!=null">total_price=#{total_price},</if>
			<if test="amount!=null">amount=#{amount},</if>
			<if test="name!=null">name=#{name},</if>
			<if test="value!=null">value=#{value}</if>
		</trim>
		where artno=#{artno} and rownum=1
	</update>
	
	<delete id="delete">
		delete from bag where artno=#{artno} and rownum=1
	</delete>
 </mapper>